<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000"
    tools:context="zeus.minhquan.drumpad.MainActivity">

    <LinearLayout
        android:id="@+id/middle_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:orientation="horizontal" >

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/drumPad_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="25"
                app:srcCompat="@drawable/single_drum"
                android:scaleType="fitXY"/>


            <ImageView
                android:id="@+id/drumPad_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="25"
                app:srcCompat="@drawable/single_drum"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/drumPad_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="25"
                app:srcCompat="@drawable/single_drum"
                android:scaleType="fitXY" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/drumPad_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="25"
                app:srcCompat="@drawable/single_drum"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/drumPad_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="25"
                app:srcCompat="@drawable/single_drum"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/drumPad_6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="25"
                app:srcCompat="@drawable/single_drum"
                android:scaleType="fitXY" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/drumPad_7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="25"
                app:srcCompat="@drawable/single_drum"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/drumPad_8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="25"
                app:srcCompat="@drawable/single_drum"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/drumPad_9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="25"
                app:srcCompat="@drawable/single_drum"
                android:scaleType="fitXY" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/drumPad_10"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="25"
                app:srcCompat="@drawable/single_drum"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/drumPad_11"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="25"
                app:srcCompat="@drawable/single_drum"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/drumPad_12"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="25"
                app:srcCompat="@drawable/single_drum"
                android:scaleType="fitXY" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:orientation="horizontal" >

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
