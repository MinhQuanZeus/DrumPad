<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="zeus.minhquan.randomquote.fragments.QuoteFragment">
    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:id="@+id/swipe_to_refresh_layout"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <DigitalClock
            android:id="@+id/digitalClock1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="50sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="100dp"
            android:text="DigitalClock" />
        <TextView
            android:id="@+id/tv_good"
            android:paddingTop="8dp"
            android:text="Good afternoon,"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_below="@id/digitalClock1"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_ask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_good"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:paddingTop="8dp"
            android:text="@string/ask"/>
        <TextView
            android:id="@+id/tv_todo"
            android:layout_width="match_parent"
            android:padding="8dp"
            android:textSize="25sp"
            android:visibility="gone"
            android:layout_below="@id/tv_ask"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/ed_todo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:textColor="@color/white"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:maxLines="1"
            android:inputType="text"
            android:layout_below="@id/tv_ask"/>
        <TextView
            android:id="@+id/tv_quote"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:padding="10dp"
            android:text="Nothing is impossible"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="left"
            android:textStyle="italic"

            android:background="@drawable/background"
            android:isScrollContainer="false"
            />
    </RelativeLayout>
    </android.support.v4.widget.SwipeRefreshLayout>

</FrameLayout>
