<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000"
    tools:context="zeus.minhquan.drumpad.MainActivity">

    <LinearLayout
        android:id="@+id/middle_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="16"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="18"
            android:gravity="center"
            android:orientation="horizontal" >
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="16"/>
            <ImageView
                android:id="@+id/iv_recoder"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="25"
                app:srcCompat="@drawable/start_recording"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="16"/>
            <ImageView
                android:id="@+id/iv_play_record"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="25"
                app:srcCompat="@drawable/play_record"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="16"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="16"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/drumPad_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="25"
                android:tag="1"
                app:srcCompat="@drawable/single_drum"
                android:scaleType="fitXY"/>


            <ImageView
                android:id="@+id/drumPad_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="25"
                app:srcCompat="@drawable/single_drum"
                android:tag="2"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/drumPad_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="25"
                app:srcCompat="@drawable/single_drum"
                android:tag="3"
                android:scaleType="fitXY" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/drumPad_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="25"
                android:tag="4"
                app:srcCompat="@drawable/single_drum"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/drumPad_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="25"
                android:tag="5"
                app:srcCompat="@drawable/single_drum"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/drumPad_6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="25"
                android:tag="6"
                app:srcCompat="@drawable/single_drum"
                android:scaleType="fitXY" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/drumPad_7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="25"
                android:tag="7"
                app:srcCompat="@drawable/single_drum"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/drumPad_8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="25"
                android:tag="8"
                app:srcCompat="@drawable/single_drum"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/drumPad_9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="25"
                android:tag="9"
                app:srcCompat="@drawable/single_drum"
                android:scaleType="fitXY" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/drumPad_10"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="25"
                android:tag="10"
                app:srcCompat="@drawable/single_drum"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/drumPad_11"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="25"
                android:tag="11"
                app:srcCompat="@drawable/single_drum"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/drumPad_12"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="25"
                android:tag="12"
                app:srcCompat="@drawable/single_drum"
                android:scaleType="fitXY" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="16"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="18"
            android:gravity="center"
            android:orientation="horizontal" >
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="40"/>
            <ImageView
                android:id="@+id/iv_pre"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="25"
                android:tag="pre"
                app:srcCompat="@drawable/pre"/>
            <ImageView
                android:id="@+id/iv_play"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="25"
                android:tag="play"
                app:srcCompat="@drawable/play"/>
            <ImageView
                android:id="@+id/iv_stop"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="25"
                android:tag="stop"
                app:srcCompat="@drawable/stop"/>
            <ImageView
                android:id="@+id/iv_play_next"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="25"
                android:tag="next"
                app:srcCompat="@drawable/next"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="40"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="16"/>


    </LinearLayout>


</RelativeLayout>
